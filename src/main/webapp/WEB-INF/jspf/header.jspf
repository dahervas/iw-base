<%@ page pageEncoding="UTF-8"%>
<%@ taglib prefix="s" uri="http://www.springframework.org/tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
		<title>Aplicacion Wb IW</title>

		<!-- Bootstrap -->
		<link href="${s}/css/bootstrap.min.css" rel="stylesheet">
		<link href="${s}/css/starter-template.css" rel="stylesheet">
		<link href="${s}/css/freelancer.css" rel = "stylesheet">
		<link href="${s}/css/freelancer.min.css" rel = "stylesheet">
		<link href="${s}/css/estilo.css" rel = "stylesheet">
    
		<!--  Fonts -->
		<link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
	</head>
	<body>
		<div class="container">
			<nav class="navbar navbar-inverse navbar-fixed-top left">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
		          		</button>
						<a class="navbar-brand" href="#"><img class = "logoBarra" src = "${s}/img/logo.jpg"></img></a>
					</div>
					<div id="navbar" class="collapse navbar-collapse">
		        		<ul class="nav navbar-nav">
							<li onclick= "activaSeccionHome()" id="home" class=""><a href="/"><span class="glyphicon glyphicon-home"></span></a></li>
							<li onclick= "activaSeccionUser()" id="user" class=""><a href="/profile"><span class="glyphicon glyphicon-user"></span></a></li>
							<!-- <li><a href="/admin">Admin</a></li> -->
							<li onclick= "activaSeccionSearch()" id="search" class=""><a href="/search"><span class="glyphicon glyphicon-search"></span></a></li>
							<li onclick= "activaSeccionCollections()" id="collections" class=""><a href="/collections"><span class="glyphicon glyphicon-th-large"></span></a></li>
							<li onclick= "activaSeccionLogin()" id="log-in" class=""><a href="/login"><span class="glyphicon glyphicon-log-in"></span></a></li>
							<c:if test="! empty ${user}">
								<li onclick= "activaSeccionLogout()" id="log-out" class=""><a href="/logout"><span class="glyphicon glyphicon-log-out">${user.login}</span></a></li>
							</c:if>
							<!-- <li><a href="/product">Products</a></li> -->
						</ul>
						
							
					</div><!--/.nav-collapse -->
				</div>
			</nav>
		
		

  <script>
  
  function activaSeccionHome() {
   
	  var x = document.getElementsByTagName("li")[0];
	  x.getAttributeNode("class").value = "active";

  }
  
  function activaSeccionUser() {
	   
	  var x = document.getElementsByTagName("li")[1];
	  x.getAttributeNode("class").value = "active";

  }
  
  function activaSeccionHomeSearch() {
	   
	  var x = document.getElementsByTagName("li")[2];
	  x.getAttributeNode("class").value = "active";

  }
  
  function activaSeccionHomeCollections() {
	   
	  var x = document.getElementsByTagName("li")[3];
	  x.getAttributeNode("class").value = "active";

  }
  
  function activaSeccionLogin() {
	   
	  var x = document.getElementsByTagName("li")[4];
	  x.getAttributeNode("class").value = "active";

  }
  
  function activaSeccionLogout() {
	   
	  var x = document.getElementsByTagName("li")[5];
	  x.getAttributeNode("class").value = "active";

  }
  
  
  
  </script>